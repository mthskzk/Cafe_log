<div class="container">
  <div class="row ">
    <div class="col-12">
      <%= render "layouts/error", obj: @cafe %>
      <%= form_with model: @cafe, url:admin_caves_path, local: true do |f| %>
        <div class="form-group  row mt-5 mb-4" >
          <%= f.label :イメージ画像 ,class:"col-md-2 text-center" %>
          <%= f.file_field :image, accept:"image/*" %>
        </div>
        <div class="form-group row mt-3 " >
          <%= f.label :カフェ名 ,class:"col-md-2 text-center"  %>
          <%= f.text_field :name ,class:"form-control col-md-5" %>
        </div>
        <div class="form-group row mt-3 ">
          <%= f.label :都道府県 ,class:"col-md-2 text-center"  %>
          <%= f.select :prefectures ,
            ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県",
            "茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県",
            "新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県",
            "静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県",
            "奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県",
            "徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県",
            "熊本県","大分県","宮崎県","鹿児島県","沖縄県"],
            class:"form-control col-md-5"  %>
        </div>
        <div class="form-group row mt-3 " >
          <%= f.label :それ以降の住所 ,class:"col-md-2 text-center"  %>
          <%= f.text_field :address_after ,class:"form-control col-md-5" %>
        </div>
        <div class="form-group row mt-3 " >
          <%= f.label :最寄り駅 ,class:"col-md-2 text-center"  %>
          <%= f.text_field :nearest_station ,class:"form-control col-md-5" %>
        </div>
        <div class="form-group row mt-3 " >
          <%= f.label :電話番号 ,class:"col-md-2 text-center"  %>
          <%= f.text_field :telephone_number ,class:"form-control col-md-5" %>
        </div>
        <div class="form-group row mt-3 " >
          <%= f.label :営業時間 ,class:"col-md-2 text-center"  %>
          <%= f.text_field :business_hours ,class:"form-control col-md-5" %>
        </div>
        <div class="form-group row mt-3 " >
          <%= f.label :定休日 ,class:"col-md-2 text-center"  %>
          <%= f.text_field :regular_holiday ,class:"form-control col-md-5" %>
        </div>
        <div class="form-group text-center col-7">
          <%= f.submit "新規登録" ,class:"btn btn-success btn-lg "  %>
        </div>
      <% end %>
    </div>
  </div>
</div>