<% post1.post_comments.each do |post_comment| %>
  <div class="py-3 mb-2">
    <div class="row">
      <div>
        <%= link_to admin_customer_path(post_comment.customer_id) do %>
          <%= image_tag post_comment.customer.get_profile_image, class: "rounded-circle", size:'50x50' %>
          <%= post_comment.customer.name %>
        <% end %>
      </div>
      <div class="pt-2 pl-5 mr-auto">
        <%= link_to 'コメントを削除する', admin_post_post_comment_path(post1.id,post_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-outline-dark", data: { confirm: '削除してよろしいですか?' } %>
      </div>
    </div>
    <div class="pl-5">
      <%= safe_join(post_comment.comment.split("\n"),tag(:br)) %>
    </div>
  </div>
<% end %>