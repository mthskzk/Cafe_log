<div class="container py-4">
  <mark class="h5 bg-white border border-dark py-4 px-5">管理者ログイン</mark>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @admin, url: session_path(resource_name) do |f| %>
        <div class="field py-4 ">
          <%= f.label :email, class:"font-weight-bold" %><br />
          <%= f.email_field :email, size: "40", autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :password, class:"font-weight-bold" %><br />
          <%= f.password_field :password, size: "40", autocomplete: "current-password" %>
        </div>
        <div class="actions pt-2 pb-5">
          <%= f.submit "ログイン", class: "btn btn-outline-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "admin/shared/links" %>

