<header class="jumbotron jumbotron-fluid">
  <nav class="navbar navbar-expand-lg navbar-light ">
    <div class="container">
      <div class="navbar-brand">
        <%= link_to root_path do %>
          <%= image_tag 'logo.jpg', size:"100x50" %>
        <% end %>
        <%= link_to "SNSトップ" ,posts_path %>
      </div>

      <ul class="navbar-nav m-3">
        <% if customer_signed_in? %>
          <li class="nav-item mr-5 pt-2">
            ようこそ！<%= current_customer.name %>さん！！
          </li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to "マイページ", customer_path(current_customer), class: 'text-dark align-middle' %></li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to "いいねした投稿", favorites_like_path, class: 'text-dark align-middle' %></li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to "保存したカフェ", customer_keep_caves_path(current_customer.id), class: 'text-dark align-middle' %></li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'text-dark align-middle' %></li>
        <% elsif admin_signed_in? %>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to "会員一覧", admin_customers_path, class: 'text-dark align-middle' %></li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to "投稿一覧", admin_posts_path, class: 'text-dark align-middle' %></li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to "レビュー一覧", admin_reviews_path, class: 'text-dark align-middle' %></li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to "カフェ一覧", admin_caves_path, class: 'text-dark align-middle' %></li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'text-dark align-middle' %></li>
        <% else %>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to " About", homes_about_path, class: 'text-dark align-middle' %></li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to " 検索ページ", homes_top_path, class: 'text-dark align-middle' %></li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to " 新規登録", new_customer_registration_path, class: 'text-dark align-middle' %></li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to " ログイン", new_customer_session_path, class: 'text-dark align-middle' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>

<style>
  .jumbotron {
    background-image: url("background_header.jpg");
    background-size: cover;
    background-position: center 60%;
  }
</style>