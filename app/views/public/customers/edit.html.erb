<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= render "layouts/error", obj: @customer %>
    <h2>会員情報編集</h2>
    <%= form_with model: @customer, url: customer_path, local:true do |f| %>
      <!--エラーメッセージ-->
      <!--<--%= render 'layouts/errors', obj: @user %>-->
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :email%>
        <%= f.email_field :email, class: "form-control email" %>
      </div>
      <div class="form-group">
        <%= f.submit "編集内容を保存", class: "btn btn-outline-dark", style: "margin: 10px;" %>
        <%= link_to "退会する" , customers_confirm_path(@customer), class: "btn btn-danger", style: "margin: 10px;" %>
      </div>
    <% end %>
  </div>
</div>

