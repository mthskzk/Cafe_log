<% if cafe.keep_by?(current_customer) %>
  <%= link_to cafe_keep_caves_path(cafe), method: :delete, remote: true do %>
    <i class="fas fa-bookmark" aria-hidden="true" style="color: black; font-size:1.5em;"></i>
  <% end %>
<% else %>
  <%= link_to cafe_keep_caves_path(cafe), method: :post, remote: true do %>
    <i class="far fa-bookmark" aria-hidden="true" style="color: black; font-size:1.5em;"></i>
  <% end %>
<% end %>