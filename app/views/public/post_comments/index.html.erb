<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <!--投稿の本文が登録されていないときは投稿者の情報は表示しない-->
      <% if @post.body == "" %>

      <% else %>
        <li>
          <%= link_to customer_path(@post.customer.id) do %>
            <%= image_tag @post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %>
            <%= @post.customer.name %>
          <% end %>
        </li>
        <li>
          <%= @post.body %>
        </li>
      <% end %>
      <div>
        <%= form_with model: [@post, @comment], url: post_post_comments_path(@post) do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows: "5", placeholder: "コメントをここに", class: "form-control comment" %>
          </div>
          <div class="form-group">
            <%= f.submit "送信する", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
      <% @post.post_comments.each do |post_comment| %>
        <li>
          <%= link_to customer_path(post_comment.customer_id) do %>
            <%= image_tag post_comment.customer.get_profile_image, class: "rounded-circle", size:'50x50' %>
            <%= post_comment.customer.name %>
          <% end %>
        </li>
        <li>
          <%= post_comment.comment %>
        </li>
      <% end %>
    </div>
  </div>
</div>
