<div class="container py-4">
  <mark class="h5 bg-white border border-dark py-4 px-5">ログイン</mark>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @customer, url: session_path(resource_name), local: true do |f| %>
        <div class="field py-4 ">
          <%= f.label :email, class:"font-weight-bold" %><br />
          <%= f.email_field :email, size: "40", autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :password, class:"font-weight-bold" %><br />
          <%= f.password_field :password, size: "40", autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions pt-2 pb-5">
          <%= f.submit "ログイン", class: "btn btn-outline-dark" %>
        </div>
      <% end %>
      <div class="row">
        <div class="col">
           &emsp;&emsp;&nbsp;未登録の方はこちら
          <%= render "public/shared/links" %>
        </div>
        <div class="col">
          &emsp;&nbsp;ゲストログインはこちら
          <%= link_to 'ゲストログイン（閲覧用）', customers_guest_sign_in_path, class: "btn btn-outline-dark btn-sm btn-block mb-3 sign_in", method: :post %>
        </div>
      </div>
    </div>
  </div>
</div>

